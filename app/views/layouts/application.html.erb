<!DOCTYPE html>
<html>
<head>
  <title>CodeappChat</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application","http://codeapp-fayeserver.herokuapp.com/faye.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
